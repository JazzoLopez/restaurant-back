<?php
namespace App\Controladores;

use App\Modelos\CreateUser;
use Psr\Http\Message\ResponseInterface as Response;
use Psr\Http\Message\ServerRequestInterface as Request;

class CreateUserController {
    private $createUserModel;

    public function __construct() {
        $this->createUserModel = new CreateUser();
    }

    public function createUser(Request $req, Response $res, $args) {
        $userData = json_decode($req->getBody());

        // Llamar al mÃ©todo createUser del modelo CreateUser
        $result = $this->createUserModel->createUser($userData);

        // Preparar y enviar respuesta HTTP
        $res = $res->withHeader('Content-type', 'application/json');
        $res->getBody()->write(json_encode($result));
        return $res;
    }
}